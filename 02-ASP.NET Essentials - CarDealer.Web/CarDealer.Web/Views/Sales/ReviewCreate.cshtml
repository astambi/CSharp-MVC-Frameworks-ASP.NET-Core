@model SaleReviewModel

@{
    ViewData["Title"] = "Review Sale";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" action="finalizecreate">
            <div class="form-group">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="Customer"></label>
                        <input asp-for="CustomerId" type="hidden" />
                        <input asp-for="Customer" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Car"></label>
                        <input asp-for="CarId" type="hidden" />
                        <input asp-for="Car" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Discount"></label>
                        <input asp-for="Discount" type="hidden" />
                        <div>
                            <span>@Model.Discount%</span>
                            @if (Model.IsYoungCustomer)
                            {
                                <span>(+@(@Model.TotalDiscount - @Model.Discount)%)</span>
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <input asp-for="TotalDiscount" type="hidden" />
                    </div>
                    <div class="form-group">
                        <input asp-for="IsYoungCustomer" type="hidden" />
                    </div>
                    <div>
                        <label asp-for="Price"></label>
                        <input asp-for="Price" type="hidden" />
                        <input asp-for="Price" readonly class="form-control" />
                    </div>
                    <div>
                        <label asp-for="FinalPrice"></label>
                        <input asp-for="FinalPrice" type="hidden" />
                        <input asp-for="FinalPrice" readonly class="form-control" />
                    </div>
                    <br />
                    <div>
                        <a asp-area="" asp-controller="Sales" asp-action="All" class="btn btn-default btn-lg">Back</a>
                        <input type="submit" value="Finalize" class="btn btn-primary btn-lg" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>